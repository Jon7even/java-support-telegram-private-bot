<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="001-create-user-table" author="Jon7even" context="dev" dbms="postgresql">

        <createSequence
                schemaName="bot"
                sequenceName="user_seq"
                dataType="BIGINT"
                startValue="1"
                incrementBy="7"
                maxValue="777777777"
                cycle="false"/>

        <createTable tableName="user" schemaName="bot">
            <column name="id" type="BIGINT" defaultValueSequenceNext="user_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false" unique="true" primaryKeyName="unq_user_login"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
            </column>
            <column name="last_name" type="VARCHAR(255)">
            </column>
            <column name="user_name" type="VARCHAR(255)">
            </column>
            <column name="register_on" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_on" type="TIMESTAMP">
            </column>
            <column name="auth_on" type="BOOLEAN" defaultValueBoolean="false">
            </column>
        </createTable>

        <rollback>
            <delete tableName="user" schemaName="bot"/>
            <dropAllForeignKeyConstraints baseTableName="user" baseTableSchemaName="bot"/>
            <dropSequence sequenceName="user_seq" schemaName="bot"/>
            <dropTable tableName="user" schemaName="bot"/>
        </rollback>

    </changeSet>

</databaseChangeLog>